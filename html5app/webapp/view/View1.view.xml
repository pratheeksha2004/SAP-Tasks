<mvc:View controllerName="com.pratheeksha.ui.html5app.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout">

    <Page id="idPage" title="{i18n>title}">
        <VBox id="idVBox" class="sapUiMediumMargin">

            <l:Grid id="idFormGrid" defaultSpan="L12 M12 S12" width="50%" class="sapUiMediumMargin" hSpacing="2" vSpacing="2">

                <!-- Name -->
                <Label id="idLabelName" text="{i18n>myname}" labelFor="idInputName" />
                <Input id="idInputName" placeholder="Enter your name" />

                <!-- Age -->
                <Label id="idLabelAge" text="{i18n>age}" labelFor="idInputAge" />
                <Input id="idInputAge" placeholder="Enter your age" type="Number" />

                <!-- Save Button -->
                <Button id="idBtnSave" text="{i18n>Save}" icon="sap-icon://save" press="onSavePress" type="Emphasized" width="150px" />
            </l:Grid>

            <!-- Table -->
            <Table
                id="idTableData"
                class="sapUiSmallMarginTop"
                items="{formModel>/details}"
                inset="false"
                width="auto">

                <columns>
                    <Column id="idColName">
                        <Text id="idTxtColName" text="Name" />
                    </Column>
                    <Column id="idColAge">
                        <Text id="idTxtColAge" text="Age" />
                    </Column>
                    <Column id="idColAction">
                        <Text id="idTxtColAction" text="Actions" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="idColListItem">
                        <cells>
                            <Text id="idTxtName" text="{formModel>name}" />
                            <Text id="idTxtAge" text="{formModel>age}" />
                            <Button id="idBtnDelete" icon="sap-icon://delete" press="onDeletePress" type="Reject" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

        </VBox>
    </Page>
</mvc:View>
